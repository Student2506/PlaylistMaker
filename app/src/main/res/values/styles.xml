<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageTextStyle">
        <item name="android:textColor">?attr/textColorMain</item>
        <item name="android:textSize">@dimen/text_size_main_screen</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/backgroundTintColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textColorAlternative</item>
        <item name="android:textSize">@dimen/text_size_main_screen</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/textColorAlternative</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsImageView">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="iconTint">@color/icon_color</item>
    </style>

    <style name="SettingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:paddingVertical">@dimen/dp_20</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsFrameLayout.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:paddingVertical">@dimen/dp_16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

        <item name="trackTint">@color/switch_track_selector</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
    </style>

    <style name="MainScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Track.Icon" parent="">
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Track.Text" parent="">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontWeight">400</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Track.Text.Header">
        <item name="android:textSize">@dimen/sp_16</item>

    </style>

    <style name="Track.Text.Detail">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">?attr/hintText</item>
    </style>

    <style name="Track.Separator" parent="">
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SearchDialog" parent="">
        <item name="android:layout_marginHorizontal">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:background">@drawable/rounded_textedit</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/dp_8</item>
    </style>

    <style name="SearchDialog.SearchEdit" parent="">
        <item name="android:background">@null</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="android:drawableTint">@color/search_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">40</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/dp_36</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="SearchDialog.ImageView" parent="">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:tint">@color/search_hint</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SongElement">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
    </style>

    <style name="bottom_menu_buttons">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">@dimen/dp_8</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="SearchDialog.ErrorScreen" parent="">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingTop">@dimen/dp_100</item>
        <item name="android:drawablePadding">@dimen/dp_16</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingHorizontal">@dimen/dp_24</item>
    </style>

    <style name="SearchDialog.ErrorScreen.TextView">
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchDialog.ErrorScreen.Button" parent="">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp_352</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:visibility">gone</item>
        <item name="cornerRadius">@dimen/dp_52</item>
    </style>

    <style name="SearchDialog.History.Button" parent="">
        <item name="android:layout_marginVertical">@dimen/dp_24</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:visibility">visible</item>
        <item name="cornerRadius">@dimen/dp_52</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AudioPlayer.Track.Description.Value" parent="">
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/textview_values</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="AudioPlayer.Track.Description.Key" parent="">
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="Text.MediaLibraryTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="MediaLibraryTabLayout" parent="">
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabTextAppearance">@style/Text.MediaLibraryTabLayout</item>
        <item name="tabBackground">?attr/colorSecondary</item>
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabIndicator">@drawable/underline</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Text.MediaLibraryFragment" parent="">
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MaterialButton.MediaLibraryFragment" parent="">
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textColorMain</item>
    </style>

    <style name="Toolbar" parent="">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
        <item name="android:titleMarginStart">@dimen/dp_16</item>
        <item name="android:titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="BackArrow.Toolbar" parent="Toolbar">
        <item name="android:navigationIcon">@drawable/arrow_back</item>
        <item name="android:titleMarginStart">@dimen/dp_12</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemIconSize">@dimen/dp_24</item>
        <item name="android:textFontWeight">400</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="backgroundTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <style name="Divider" parent="">
        <item name="dividerColor">@color/topborder</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/rounded_textedit_with_border</item>
        <item name="android:textAppearance">@style/TextInputLayout.Text</item>
        <item name="hintTextColor">@color/rounded_textedit_with_border</item>
        <item name="hintTextAppearance">@style/Small.TextInputLayout.Text</item>
        <item name="android:textColorHint">@color/textview_values</item>
    </style>

    <style name="TextInputLayout.Text" parent="">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/textview_values</item>
    </style>

    <style name="Small.TextInputLayout.Text" parent="TextInputLayout.Text">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="CustomToast">
        <item name="android:layout_marginHorizontal">@dimen/dp_8</item>
        <item name="android:background">@color/button_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">@dimen/dp_16</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="CreatePlaylistPreview">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_24</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">116dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CreatePlaylistTextField.TextInputLayout" parent="TextInputLayout">
        <item name="android:layout_marginHorizontal">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_32</item>
    </style>

    <style name="CreatePlaylistButton">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_32</item>
        <item name="android:background">@drawable/button_create_playlist</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaylistError">
        <item name="android:layout_marginTop">@dimen/dp_44</item>
    </style>

    <style name="PlaylistRecycleView">
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:paddingHorizontal">@dimen/dp_12</item>
    </style>

    <style name="PlaylistTileText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

</resources>