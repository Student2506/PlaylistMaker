<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageTextStyle">
        <item name="android:textColor">?attr/textColorMain</item>
        <item name="android:textSize">@dimen/text_size_main_screen</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/backgroundTintColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textColorAlternative</item>
        <item name="android:textSize">@dimen/text_size_main_screen</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/textColorAlternative</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsImageView">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="iconTint">@color/icon_color</item>
    </style>

    <style name="SettingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:paddingVertical">@dimen/dp_20</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SwitchCompat" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">?attr/switchActivatedColor</item>
        <item name="colorSwitchThumbNormal">?attr/switchThumbNormalColor</item>
        <item name="android:colorForeground">?attr/switchColor</item>

        <item name="android:minWidth">@dimen/dp_56</item>
        <item name="android:minHeight">@dimen/dp_40</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
    </style>

    <style name="TopHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp_24</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TopHeaderImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="TopHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:layout_marginBottom">@dimen/dp_12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">@dimen/dp_48</item>
        <item name="android:paddingEnd">@dimen/dp_48</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="MainScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Track.Icon" parent="">
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="Track.Text" parent="">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="Track.Text.Header">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="Track.Text.Detail">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">?attr/hintText</item>
    </style>
    <style name="Track.Separator" parent="">
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SearchDialog" parent="">
        <item name="android:layout_marginHorizontal">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:background">@drawable/rounded_textedit</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/dp_8</item>
    </style>

    <style name="SearchDialog.SearchEdit" parent="">
        <item name="android:background">@null</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:drawableTint">@color/search_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">40</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/dp_36</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="SearchDialog.ImageView" parent="">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SongElement">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
    </style>


</resources>