<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/search_field</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="textColorMain">?attr/colorOnPrimary</item>
        <item name="backgroundTintColor">?attr/colorPrimaryVariant</item>
        <item name="textColorAlternative">@color/black</item>
        <item name="switchColor">@color/white</item>
        <item name="switchActivatedColor">@color/switch_activated</item>
        <item name="switchThumbNormalColor">@color/white</item>
        <item name="hintText">@color/search_hint</item>
        <item name="bgStatusBar">@color/white</item>
        <item name="materialAlertDialogTheme">@style/PlaylistMakerAlertDialog</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="PlaylistMakerAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyleDialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyleDialog</item>
    </style>

    <style name="ButtonStyleDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>