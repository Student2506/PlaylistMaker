<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_screen_color</item>
        <item name="colorPrimaryDark">@color/main_screen_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/search_field</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textColorMain">?attr/colorOnPrimary</item>
        <item name="backgroundTintColor">?attr/colorPrimaryVariant</item>
        <item name="textColorAlternative">@color/black</item>
        <item name="switchColor">@color/white</item>
        <item name="switchActivatedColor">@color/switch_activated</item>
        <item name="switchThumbNormalColor">@color/white</item>
        <item name="hintText">@color/search_hint</item>
        <item name="bgStatusBar">@color/main_screen_color</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
    <style name="AnotherTheme.Theme.PlaylistMaker" parent="Theme.PlaylistMaker">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="bgStatusBar">@color/white</item>
    </style>
</resources>