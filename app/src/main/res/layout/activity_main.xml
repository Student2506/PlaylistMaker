<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_color"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_52">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/top_header"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_main_screen" />

    </FrameLayout>

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/search_button"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_main_screen"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/media_library"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/button_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/media_library_button"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_main_screen"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/media_library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/button_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/settings_button"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_main_screen"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

</LinearLayout>