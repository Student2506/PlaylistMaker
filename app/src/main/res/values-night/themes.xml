<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="textColorMain">?attr/colorOnPrimary</item>
        <item name="backgroundTintColor">?attr/colorSecondaryVariant</item>
        <item name="textColorAlternative">?attr/colorOnSecondary</item>
        <item name="switchColor">#E6E8EB</item>
        <item name="switchActivatedColor">@color/switch_activated</item>
        <item name="switchThumbNormalColor">#AEAFB4</item>
        <item name="hintText">@color/white</item>
        <item name="bgStatusBar">@color/black</item>
        <item name="materialAlertDialogTheme">@style/PlaylistMakerAlertDialog</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="PlaylistMakerAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyleDialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyleDialog</item>
    </style>

    <style name="ButtonStyleDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>